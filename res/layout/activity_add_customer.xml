<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0D7E7"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SaleActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/t_name_sale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="거래처명:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_inputname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:ems="10"
            android:lines="1"
            android:singleLine="true" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#EFECF7"
            android:gravity="center"
            android:text="품목"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#EFECF7"
            android:gravity="center"
            android:text="단가"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" >

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/t_code1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="#F3EFE7"
                        android:gravity="center"
                        android:text="A"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/t_code2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="#F3EFE7"
                        android:gravity="center"
                        android:text="O"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/t_code3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="#F3EFE7"
                        android:gravity="center"
                        android:text="H"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/t_code4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="#F3EFE7"
                        android:gravity="center"
                        android:text="a"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/t_code5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="#F3EFE7"
                        android:gravity="center"
                        android:text="부"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/t_code6"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="#F3EFE7"
                        android:gravity="center"
                        android:text="P"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/t_code7"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="#F3EFE7"
                        android:gravity="center"
                        android:text="C"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/t_code8"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="#F3EFE7"
                        android:gravity="center"
                        android:text="M"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/t_code9"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="#F3EFE7"
                        android:gravity="center"
                        android:text="F"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#00FF00" />

                    <TextView
                        android:id="@+id/t_code10"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="#F3EFE7"
                        android:gravity="center"
                        android:text="f"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#00FF00" />

                    <TextView
                        android:id="@+id/t_code11"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="#F3EFE7"
                        android:gravity="center"
                        android:text="F"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#808080" />

                    <TextView
                        android:id="@+id/t_code12"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="#F3EFE7"
                        android:gravity="center"
                        android:text="f"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#808080" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/et_num1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="6dp"
                        android:inputType="number" >
                    </EditText>

                    <EditText
                        android:id="@+id/et_num2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" >
                    </EditText>

                    <EditText
                        android:id="@+id/et_num3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:inputType="number" >
                    </EditText>

                    <EditText
                        android:id="@+id/et_num4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" >
                    </EditText>

                    <EditText
                        android:id="@+id/et_num5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:inputType="number" >
                    </EditText>

                    <EditText
                        android:id="@+id/et_num6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" >
                    </EditText>

                    <EditText
                        android:id="@+id/et_num7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:inputType="number" >
                    </EditText>

                    <EditText
                        android:id="@+id/et_num8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" >
                    </EditText>

                    <EditText
                        android:id="@+id/et_num9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:inputType="number" >
                    </EditText>

                    <EditText
                        android:id="@+id/et_num10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" >
                    </EditText>

                    <EditText
                        android:id="@+id/et_num11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:inputType="number" >
                    </EditText>

                    <EditText
                        android:id="@+id/et_num12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" >
                    </EditText>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:paddingTop="5dp" >

        <Button
            android:id="@+id/bt_cancleadd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="취소" />

        <Button
            android:id="@+id/bt_okadd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="확인" />
    </LinearLayout>

</LinearLayout>